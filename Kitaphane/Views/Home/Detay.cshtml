@using Kitaphane.Models.Entity
@model kitapvecheck
@{
    ViewBag.Title = "Detay";
}


<div class="container pb-5 pt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="holder.js/100px480" class="card-responsive" alt="...">
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.tblkitaplar.kitapad</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="badge bg-dark">@Model.tblkitaplar.kitapcheck</span>
                    <span class="product-number">
                        ID: @Model.tblkitaplar.kitapid
                    </span>
                </div>
            </div>
            <div class="container">
                <div class="row row-cols-2">
                    <div class="col">Kitap ISBN: @Model.tblkitaplar.kitapisbn</div>
                    <div class="col">Yayın yılı: @Model.tblkitaplar.kitapyil</div>
                    <div class="col">Fiyat: @Model.tblkitaplar.kitapfiyat</div>
                    <div class="col">İşlem Tarihi: @Model.tblcheck.islemtarih</div>
                    <div class="col">İşlemi Yapan: @Model.kisiadi</div>
                </div>
            </div>
        </div>
    </div>
</div>

